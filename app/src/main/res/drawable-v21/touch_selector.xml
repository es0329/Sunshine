<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- "Pressed," but hasn't yet been activated (finger down) -->
    <item android:state_pressed="true">
        <ripple android:color="@color/grey" />
    </item>

    <!-- "Activated". In SINGLE_CHOICE_MODE, it flags the active row of a ListView -->
    <item android:drawable="@color/sunshine_light_blue" android:state_activated="true" />

    <!-- Default state. -->
    <item android:drawable="@android:color/transparent" />
</selector>